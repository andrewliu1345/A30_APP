<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/page_item_signature_img"
        android:layout_width="730dp"
        android:layout_height="360dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY" />
    <com.joesmate.widget.HtmlView
         android:layout_centerInParent="true"
        android:id="@+id/page_item_signature_html"
        android:layout_width="730dp"
        android:layout_height="360dp" />
    <LinearLayout
         android:layout_centerInParent="true"
        android:id="@+id/page_item_signature_pdf"
        android:layout_width="730dp"
        android:layout_height="360dp" />
    <Button 
         android:id="@+id/page_item_signature_bt"
        android:text="开始签名"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
         android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    <com.joesmate.widget.SignatureFrame
        android:visibility="gone"
         android:id="@+id/page_item_signature_farme"
        android:layout_width="@dimen/signature_frame_w"
        android:layout_height="@dimen/signature_frame_h"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" >
    </com.joesmate.widget.SignatureFrame>

</RelativeLayout>