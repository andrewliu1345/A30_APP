<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" 
    android:background="@color/content_blue">
    
    <View android:background="@color/title_blue"
         android:layout_width="@dimen/keyboard_items_margin_left"
    android:layout_height="fill_parent"/>

    <com.joesmate.widget.CustomText
        android:id="@+id/option_item_layout_title"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/page_base_widget_margin"
        android:text="输入模式"
        android:textColor="@color/white"
        android:textSize="@dimen/page_base_content_size" />

    <com.joesmate.widget.CustomText
        android:id="@+id/option_item_layout_option"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:gravity="center_vertical|right"
        android:text="串口"
        android:paddingRight="@dimen/keyboard_items_margin_left"
        android:textColor="@color/white"
        android:textSize="@dimen/page_base_content_size" />

</LinearLayout>