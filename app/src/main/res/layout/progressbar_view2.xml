<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:background="@color/green"
    android:orientation="vertical" >

    <com.joesmate.widget.CustomText
        android:id="@+id/progressbar_hint"
        android:layout_width="@dimen/progressbar_frame_width"
        android:layout_height="@dimen/progressbar_item_height"
        android:gravity="center"
        android:text="@string/transmit_str1"
        android:textColor="@color/white"
        android:textSize="@dimen/page_base_content_size" />

	<ProgressBar android:id="@+id/progressbar_down"  
        android:layout_width="@dimen/progressbar_frame_width"
        android:layout_height="@dimen/progressbar_item_height" 
        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
        android:gravity="center" 
        android:max="100"  
        android:progress="0" />

</LinearLayout>