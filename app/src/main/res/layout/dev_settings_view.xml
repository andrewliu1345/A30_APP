<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <com.joesmate.widget.CustomText
        android:layout_width="@dimen/keyboard_frame_widht"
        android:layout_height="@dimen/keyboard_items_height"
        android:background="@color/title_blue"
        android:gravity="center"
        android:text="柜外清设置"
        android:textColor="@color/white"
        android:textSize="@dimen/page_base_content_size" />

    <LinearLayout
        android:layout_width="@dimen/keyboard_frame_widht"
        android:layout_height="@dimen/keyboard_frame_height"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <com.joesmate.widget.ItemSeekBar
            android:id="@+id/dev_settings_item_loudspeaker"
            android:layout_width="@dimen/dev_items_widht"
            android:layout_height="@dimen/keyboard_items_height" />

        <com.joesmate.widget.ItemSeekBar
            android:visibility="gone"
            android:id="@+id/dev_settings_item_headset"
            android:layout_width="@dimen/dev_items_widht"
            android:layout_height="@dimen/keyboard_items_height"
            android:layout_marginTop="@dimen/keyboard_items_margin_top" />

        <com.joesmate.widget.ItemSeekBar
            android:id="@+id/dev_settings_item_brigthness"
            android:layout_width="@dimen/dev_items_widht"
            android:layout_height="@dimen/keyboard_items_height"
            android:layout_marginTop="@dimen/keyboard_items_margin_top" />

        <com.joesmate.widget.ItemSeekBar
            android:id="@+id/dev_settings_item_showTime"
            android:layout_width="@dimen/dev_items_widht"
            android:layout_height="@dimen/keyboard_items_height"
            android:layout_marginTop="@dimen/keyboard_items_margin_top" />
        <com.joesmate.widget.ItemSeekBar
            android:id="@+id/dev_settings_item_jhTextSize"
            android:layout_width="@dimen/dev_items_widht"
            android:layout_height="@dimen/keyboard_items_height"
            android:layout_marginTop="@dimen/keyboard_items_margin_top" />
         <com.joesmate.widget.ItemSeekBar
            android:id="@+id/dev_settings_item_pen"
            android:layout_width="@dimen/dev_items_widht"
            android:layout_height="@dimen/keyboard_items_height"
            android:layout_marginTop="@dimen/keyboard_items_margin_top" />
         <com.joesmate.widget.SettingsItemScroll
            android:id="@+id/dev_settings_item_color"
            android:layout_width="@dimen/dev_items_widht"
            android:layout_height="@dimen/keyboard_items_height" 
            android:layout_marginTop="@dimen/keyboard_items_margin_top"/>
         <com.joesmate.widget.SettingsItemScroll
            android:id="@+id/dev_settings_item_baud"
            android:layout_width="@dimen/dev_items_widht"
            android:layout_height="@dimen/keyboard_items_height" 
            android:layout_marginTop="@dimen/keyboard_items_margin_top"/>

       
    </LinearLayout>
    
     <com.joesmate.widget.CustomText
        android:id="@+id/app_version"
        android:layout_width="@dimen/keyboard_frame_widht"
        android:layout_height="40dp"
        android:background="@color/title_blue"
        android:gravity="left|center_vertical"
        android:text="软件版本:"
        android:textColor="@color/white"
        android:textSize="@dimen/page_base_content_size" />

</LinearLayout>