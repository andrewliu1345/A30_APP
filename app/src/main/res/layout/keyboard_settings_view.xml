<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <com.joesmate.widget.CustomText
        android:layout_width="@dimen/keyboard_frame_widht"
        android:layout_height="@dimen/keyboard_items_height"
        android:background="@color/title_blue"
        android:gravity="center"
        android:text="密码键盘设置"
        android:textColor="@color/white"
        android:textSize="@dimen/page_base_content_size" />

    <LinearLayout
        android:layout_width="@dimen/keyboard_frame_widht"
        android:layout_height="@dimen/keyboard_frame_height"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <com.joesmate.widget.SettingsItemScroll
            android:id="@+id/keyboard_settings_item_1"
            android:layout_width="@dimen/keyboard_items_widht"
            android:layout_height="@dimen/keyboard_items_height" />

        <com.joesmate.widget.SettingsItemScroll
            android:id="@+id/keyboard_settings_item_2"
            android:layout_width="@dimen/keyboard_items_widht"
            android:layout_height="@dimen/keyboard_items_height"
            android:layout_marginTop="@dimen/keyboard_items_margin_top" />

        <com.joesmate.widget.SettingsItemScroll
            android:id="@+id/keyboard_settings_item_3"
            android:layout_width="@dimen/keyboard_items_widht"
            android:layout_height="@dimen/keyboard_items_height"
            android:layout_marginTop="@dimen/keyboard_items_margin_top" />

        <com.joesmate.widget.SettingsItemScroll
            android:id="@+id/keyboard_settings_item_4"
            android:layout_width="@dimen/keyboard_items_widht"
            android:layout_height="@dimen/keyboard_items_height"
            android:layout_marginTop="@dimen/keyboard_items_margin_top" />

        <com.joesmate.widget.SettingsItemScroll
            android:id="@+id/keyboard_settings_item_5"
            android:layout_width="@dimen/keyboard_items_widht"
            android:layout_height="@dimen/keyboard_items_height"
            android:layout_marginTop="@dimen/keyboard_items_margin_top" />

        <com.joesmate.widget.SettingsItemScroll
            android:id="@+id/keyboard_settings_item_6"
            android:layout_width="@dimen/keyboard_items_widht"
            android:layout_height="@dimen/keyboard_items_height"
            android:layout_marginTop="@dimen/keyboard_items_margin_top" />
    </LinearLayout>

</LinearLayout>