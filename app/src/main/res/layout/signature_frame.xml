<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/title_blue"
    android:orientation="vertical" >

    <com.pensoon.android.signature.view.SignatureView
        android:id="@+id/signature_frame_view"
        android:layout_width="fill_parent"
        android:layout_weight="0.8"
        android:layout_height="0dp"
        android:layout_margin="@dimen/page_base_widget_margin"
        android:background="@drawable/black_frame" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/page_base_widget_margin"
        android:layout_marginRight="@dimen/page_base_widget_margin"
        android:layout_weight="0.2"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        
        <Button 
            android:id="@+id/signature_frame_bt_fullscreen"
            android:text="全屏"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/page_base_widget_margin"/>
        
        <Button 
            android:id="@+id/signature_frame_bt_hide"
            android:text="隐藏"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/page_base_widget_margin"
            android:layout_marginLeft="@dimen/page_base_widget_margin"/>
        
         <Button 
             android:id="@+id/signature_frame_bt_reset"
            android:text="重签"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/page_base_widget_margin"
            android:layout_marginLeft="@dimen/page_base_widget_margin"/>
         
          <Button 
              android:id="@+id/signature_frame_bt_confirm"
            android:text="确定"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/page_base_widget_margin"
            android:layout_marginLeft="@dimen/page_base_widget_margin"/>
    </LinearLayout>

</LinearLayout>